{
    "name": "Bible Split Screen",
    "description": "Bible Split Screen Extension",
    "version": "0.2.0",
    "manifest_version": 3,
    "icons": { 
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png" 
    },
    "action": {
        "default_title": "Bible Split Screen",
        "default_icon": {             
            "16": "icon.png",   
            "24": "icon.png",   
            "32": "icon.png"   
        }
    },
    "content_scripts": [
        {
            "matches": ["*://bible.mcgi.org/*", "*://bible.addcit.org/*"],
            "js": ["contentScript.js"] ,
            "css": ["contentScript.css"]
        }
    ],
    "web_accessible_resources": [
        {
          "resources": ["images/backdrop.jpg", "images/bible background.jpg"],
          "matches": ["*://bible.mcgi.org/*", "*://bible.addcit.org/*"]
        }
    ],
    "permissions": [
        "activeTab"
    ]
}